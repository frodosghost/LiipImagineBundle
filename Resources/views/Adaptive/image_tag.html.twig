{% block widget_attributes %}
{% spaceless %}
 {% for attrname,attrvalue in options %}
 {% spaceless %}
     {% if attrname in ['class', 'alt', 'title', 'id'] %}
         {{attrname}}="{{attrvalue}}" 
     {% else %}
         data-{{attrname}}="{{attrvalue}}" 
     {% endif%}
     {% endspaceless %}
{% endfor %}
{% endspaceless %}
{% endblock widget_attributes %}

{% block img_tag %}
{% spaceless %}
<img src="{{ src }}" {{ block('widget_attributes') }}/>
{% endspaceless %}
{% endblock %}
